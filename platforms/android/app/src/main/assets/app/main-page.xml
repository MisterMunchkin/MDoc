<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:FAB="nativescript-floatingactionbutton"
    navigatingTo="onNavigatingTo" >
    
    <ActionBar title="MDoc" android.icon="res://icon" android.iconVisibility="always">
     
        <StackLayout orientation="horizontal">
            <Button text="refresh" android.systemIcon="ic_refresh" tap="{{ select }}" />
        </StackLayout>
    </ActionBar>

    <GridLayout rows="auto, 70">    
        <StackLayout>

            <!-- where the listview should be -->
        </StackLayout>

        <FAB:fab tap="{{ routeToInsert }}"
                    row="1"
                    rippleColor="#f1f1f1"
                    class="fab-button"/>
    </GridLayout>
</Page>